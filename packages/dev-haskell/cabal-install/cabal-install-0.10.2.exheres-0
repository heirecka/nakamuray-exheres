require bash-completion hackage [ has_bin=true has_lib=false ]

SUMMARY="The command-line interface for Cabal and Hackage"
DESCRIPTION="
The 'cabal' command-line program simplifies the process of managing Haskell
software by automating the fetching, configuration, compilation and
installation of Haskell libraries and programs.
"

LICENCES="BSD-3"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    $(haskell_bin_dependencies "
        dev-haskell/array[>=0.1&<0.4]
        dev-haskell/bytestring[>=0.9]
        dev-haskell/Cabal[>=1.10.1&<1.11]
        dev-haskell/containers[>=0.1&<0.5]
        dev-haskell/directory[>=1&<1.2]
        dev-haskell/filepath[>=1.0&<1.3]
        dev-haskell/HTTP[>=4000.0.2&<4001]
        dev-haskell/network[>=1&<3]
        dev-haskell/old-time[>=1&<1.1]
        dev-haskell/pretty[>=1&<1.1]
        dev-haskell/process[>=1&<1.1]
        dev-haskell/random[>=1&<1.1]
        dev-haskell/time[>=1.1&<1.3]
        dev-haskell/unix[>=1.0&<2.5]
        dev-haskell/zlib[>=0.4&<0.6]
    ")
"

src_install() {
    cabal_src_install
    dobashcompletion bash-completion/cabal
}

