SUMMARY="Japanese Kana-Kanji Conversion Engine library with G-HAL patches"
HOMEPAGE="http://sourceforge.jp/projects/anthy"
DOWNLOADS="ghal? ( http://www.fenix.ne.jp/~G-HAL/soft/nosettle/anthy-9100h.patch13-release-2010Z20.alt-depgraph-100603d.alt-cannadic-100603-patch100628-ticket22612.zipdic-201008.tar.lzma )
           !ghal? ( mirror://sourceforge.jp/${PN}/37536/${PNV}.tar.gz )"

LICENCES="LGPL-2.1 GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="emacs ghal"

DEPENDENCIES="
    build:
        emacs? ( app-editors/emacs )
"

DEFAULT_SRC_INSTALL_EXTRA_DOCS=( README.en )

src_configure() {
    ! optionq emacs && export EMACS=no
    default
}

src_install() {
    default
    rm doc/Makefile* || die "failed to rm Makefiles"
    dodoc doc/*
}
